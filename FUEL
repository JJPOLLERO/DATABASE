<body>
  <header>
    <div class="header-left">
      <i class="fas fa-gas-pump"></i>
      <h1>TSRO GAS STATION</h1>
    </div>
    <div class="header-icons">
      <i class="fas fa-user-circle" title="Profile"></i>
      <i class="fas fa-box" title="Products"></i>
      <i class="fas fa-truck" title="Delivery History"></i>
      <i class="fas fa-cash-register" title="Sales"></i>
    </div>
  </header>

  <div class="container" id="machines-container">
    <!-- Machines will be added here -->
  </div>

  <div class="add-button">
    <button onclick="addMachine()"><i class="fas fa-plus"></i></button>
  </div>

  <script>
    let machineCount = 0;
    const fuelTypes = ["Diesel", "Unleaded", "Premium"];

    function addMachine() {
      machineCount++;
      const container = document.getElementById("machines-container");

      const section = document.createElement("div");
      section.className = "machine-section";
      section.id = `machine-${machineCount}`;

      let html = `
        <div class="machine-header">
          <h2><i class="fas fa-gas-pump"></i> Machine ${machineCount}</h2>
        </div>
      `;

      fuelTypes.forEach(fuel => {
        const fuelId = fuel.toLowerCase();
        html += `
          <div class="fuel-table">
            <h3>${fuel}</h3>
            <form class="add-transaction-form" onsubmit="addTransaction(event, ${machineCount}, '${fuel}')">
              <label>Price per Liter (₱):</label>
              <input type="number" step="0.01" required id="price-${machineCount}-${fuel}" value="60" />
              <label>Amount (₱):</label>
              <input type="number" step="0.01" required id="amount-${machineCount}-${fuel}" />
              <button type="submit">Add</button>
            </form>
            <table id="table-${machineCount}-${fuel}">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Amount (₱)</th>
                  <th>Liters</th>
                </tr>
              </thead>
              <tbody></tbody>
              <tfoot>
                <tr class="total-row">
                  <td colspan="2">Total Amount:</td>
                  <td id="total-amount-${machineCount}-${fuel}">₱0.00</td>
                </tr>
                <tr class="total-row">
                  <td colspan="2">Total Liters:</td>
                  <td id="total-liters-${machineCount}-${fuel}">0.00</td>
                </tr>
              </tfoot>
            </table>
          </div>
        `;
      });

      section.innerHTML = html;
      container.appendChild(section);
    }

    function addTransaction(event, machineId, fuelType) {
      event.preventDefault();
      const amountInput = document.getElementById(`amount-${machineId}-${fuelType}`);
      const priceInput = document.getElementById(`price-${machineId}-${fuelType}`);

      const amount = parseFloat(amountInput.value);
      const price = parseFloat(priceInput.value);

      if (isNaN(amount) || amount <= 0 || isNaN(price) || price <= 0) return;

      const liters = amount / price;
      const tableBody = document.getElementById(`table-${machineId}-${fuelType}`).querySelector("tbody");
      const rowCount = tableBody.rows.length + 1;

      const row = tableBody.insertRow();
      row.innerHTML = `
        <td>${rowCount}</td>
        <td>${amount.toFixed(2)}</td>
        <td>${liters.toFixed(2)}</td>
      `;

      amountInput.value = "";
      updateFuelTotals(machineId, fuelType);
    }

    function updateFuelTotals(machineId, fuelType) {
      const tableBody = document.getElementById(`table-${machineId}-${fuelType}`).querySelector("tbody");
      let totalAmount = 0;
      let totalLiters = 0;

      for (let row of tableBody.rows) {
        const amount = parseFloat(row.cells[1].innerText);
        const liters = parseFloat(row.cells[2].innerText);
        if (!isNaN(amount)) totalAmount += amount;
        if (!isNaN(liters)) totalLiters += liters;
      }

      document.getElementById(`total-amount-${machineId}-${fuelType}`).innerText = `₱${totalAmount.toFixed(2)}`;
      document.getElementById(`total-liters-${machineId}-${fuelType}`).innerText = totalLiters.toFixed(2);
    }

    // Load the first machine on startup
    window.onload = () => {
      addMachine();
    };
  </script>
</body>
</html>

